{
  "name": "nvidia-control-center",
  "version": "1.3.0",
  "private": true,
  "description": "NVIDIA Control Center - GPU management and monitoring",
  "scripts": {
    "dev": "pnpm --filter @nvidia-cc/desktop dev",
    "dev:mobile": "pnpm --filter @nvidia-cc/mobile start",
    "build": "pnpm --filter @nvidia-cc/shared build && pnpm --filter @nvidia-cc/desktop build",
    "build:shared": "pnpm --filter @nvidia-cc/shared build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "packageManager": "pnpm@9.12.1",
  "pnpm": {
    "overrides": {
      "dotenv-expand": "11.0.6"
    }
  }
}

